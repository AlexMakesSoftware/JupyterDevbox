{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": {    
    "gcc":                            "12.2.0",
    "jq": "latest",
    "python3":                        "latest",
    "python312Packages.stdenv":       "latest",
    "python312Packages.jupyter":      "latest",
    "python312Packages.plotly":       "latest",
    "python312Packages.pandas":       "latest",
    "python312Packages.scikit-learn": "latest",
    "vscodium":                       "latest",
    "cowsay":                         "latest",
    "lolcat":                         "latest",
    "python312Packages.ipykernel": {
      "version": "latest",
      "outputs": ["out"]
    }
  },
  "env": {
    "LC_ALL":   "C",
    "LANG":     "C",
    "GREETING": "Welcome to your dev environment. To start vscodium type 'codium .' Please note that some packages won't work when installed via pip (if they use low-level libraries)."
  },
  "shell": {
    "init_hook": [
      "export LD_LIBRARY_PATH=./.devbox/nix/profile/default/lib",
      "source \"$VENV_DIR/bin/activate\" || { echo \"Failed to activate virtual environment\"; exit 1; } ",
      "codium --list-extensions | grep -q ms-python.python || codium --install-extension ms-python.python",
      "codium --list-extensions | grep -q ms-toolsai.jupyter || codium --install-extension ms-toolsai.jupyter",
      "chmod +x setup_kernel.sh",
      "./setup_kernel.sh",
      "echo \"$GREETING\" | cowsay | lolcat",
      "codium --folder-uri \"file://$(pwd)\" --new-window"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
